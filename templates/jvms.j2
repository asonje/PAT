CMD=$1

function run()
{
  (
    while :
    do
      echo $(ps aux | grep -v '/bin/bash' | grep _[m]_ | wc -l) $(ps aux | grep -v '/bin/bash' | grep _[r]_ | wc -l)
      sleep {{ SAMPLE_RATE }}
    done
  ) | awk -v host=$(hostname) -v tag={{ JOB_ID }} -v step={{ SAMPLE_RATE }} '
  BEGIN {
    print "HostName", "TimeStamp", "MapCount", "ReduceCount"
    epoch = systime()
  }
  (NF) {
    print host, epoch, $0
    epoch = epoch + step
  }
  fflush()'
}

case $CMD in
  "run") run ;;
  "post-process") ;;
esac
